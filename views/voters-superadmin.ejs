                <div id="content">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <div class="container-fluid">
                            <button type="button" id="sidebarCollapse" class="btn">
                                <img src="/assets/img/menu.png">
                            </button>

                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="nav navbar-nav ml-auto">
                                    <li class="nav-item" style="color:#7E8DA4;">
                                        <img src="/assets/img/superadmin.jpeg" style="height: 30px;" class="rounded-circle">
                                        Super Admin
                                    </li>
                            </div>
                        </div>
                    </nav>
                    <div class="container-fluid">
                        <div class="col-md-12 headform">
                            <h4>Daftar Pemilih</h4>
                        </div>
                        <div class="formAdd">
                            <form action="" method="">
                                <h6>Add Pemilih</h6>
                                <div class="divide-row"></div>
                                    <div class="form-group row">
                                        <label for="inputNIM" class="col-form-label">NIM</label>
                                        <div class="col-sm-4 nim">
                                          <input type="number" class="form-control" id="inputNIM" placeholder="">
                                        </div>
                                        <label for="inputEmail" class="col-form-label">Email</label>
                                        <div class="col-sm-6 email">
                                          <input type="text" class="form-control" id="inputEmail" placeholder="">
                                        </div>
                                        <div class="col-sm-1 addBtn">
                                            <button type="button" class="btn" class="btn-label col-1"><ion-icon name="add"></ion-icon>Add Row</button>
                                        </div>
                                    </div>
                            </form>
                        </div>
        
                        <div class="TabPemilih">
                            <table class="table table-bordered table-responsive-lg">
                                <thead class="tabhead">
                                  <tr>
                                    <th scope="col">No.</th>
                                    <th scope="col">Nama</th>
                                    <th scope="col">NIM</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Action</th>
                                  </tr>
                                </thead>
                                    <tbody>
                                        <tr class="tr1">
                                            <td>1.</td>
                                            <td>Bagas Tri Wibowo</td>
                                            <td>1301194501</td>
                                            <td>bagas.tri.w07@gmail.com</td>
                                            <td><button class="btn btn-success">Used</button></td>
                                            <td><button type="button" class="btn btn-light trash"><ion-icon name="trash-outline"></ion-icon></button></td>
                                        </tr>
                                        <tr class="tr2">
                                            <td>2.</td>
                                            <td>Rahma Fadhilah</td>
                                            <td>130118342</td>
                                            <td>rahmafma@gmail.com</td>
                                            <td><button class="btn btn-warning">Unused</button></td>
                                            <td><button type="button" class="btn btn-light trash"><ion-icon name="trash-outline"></ion-icon></button></td>
                                        </tr>
                                        <tr class="tr3">
                                            <td>3.</td>
                                            <td>Risma Julia Wardany</td>
                                            <td>1301184569</td>
                                            <td>rismajw@gmail.com</td>
                                            <td><button class="btn btn-success">Used</button></td>
                                            <td><button type="button" class="btn btn-light trash"><ion-icon name="trash-outline"></ion-icon></button></td>
                                        </tr>
                                        <% for(var i=0; i < voters.length; i++) { %>
                                            <tr class="tr1">
                                                <td><%= i + 1 %></td>
                                                <td><%= voters[i].name %></td>
                                                <td><%= voters[i].nim %></td>
                                                <td><%= voters[i].email %></td>
                                                <td><button class="btn btn-success">Used</button></td>
                                                <td><button type="button" class="btn btn-light trash"><ion-icon name="trash-outline"></ion-icon></button></td>
                                            </tr>
                                            <% } %> 
                                            
                                            
                                    </tbody>
                            </table>
                        </div>
        
                    </div>
                </div>
            </div>
                
    <script src="https://unpkg.com/ionicons@5.1.2/dist/ionicons.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {

        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
            $('#content').toggleClass('active');
        });
    
    });
    </script>

</body>
</html>